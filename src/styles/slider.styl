.third-page
  .slider
    position relative
    &__slides
      position relative
      &_slide
        position absolute
        width 100%
        height 100%
        opacity 0
        z-index 1
        transition opacity 1s

  .showing
    opacity 1
    z-index 2
    transition z-index 2s
    transition-delay 1s

  .buttons
    position absolute
    right 31px
    width 397px
    display flex
    justify-content space-between
    top 50%
    z-index 3
    &__controls
      padding 7px 15px
      border 1px solid $lightGray
      background-color none
      font-family Alegreya-Bold
      font-size 1.2rem
      color $darkBrown
      cursor pointer
      &:hover
        background-color alpha($lightGray, .3)
        color $lightBrown

.slider__slides_slide.showing
  animation-name example
  animation-duration 2s

@keyframes example
  0%   {opacity: 0; left:0; transform scale(0.85)}
  50%  {opacity: 1; left: -400px }
  100% {opacity: 1; left:0}
