$baseFontSize=16px;

$laptopsFontSize = 16px;
$tabletsFontSize = 14px;
$mobileFontSize = 14px;
$xsMobileFontSize = 12px;

$pageContentMaxWidth=1260px;
html
  font-size $baseFontSize
  font-family Arial
  min-height 100vh

body
  padding 0
  margin 0
  min-height 100vh

h1,h2,h3,h4,p,ul
  margin 0
  padding 0

li
  list-style none

a
  text-decoration none

.page-wrapper
  box-sizing border-box

.page-content
  max-width $pageContentMaxWidth
  margin 0 auto
  height 100%

@media screen and (max-width: $tablets)
  html
    font-size $tabletsFontSize

@media screen and (max-width: $mobile)
  html
    font-size $mobileFontSize

@media screen and (max-width: $mobile)
  html
    font-size $xsMobileFontSize