.third-page
  width 100%
  height 100%
  background-image url('./../assets/image/bg_third-page.jpg')
  background-size cover

  .page-content
    .content-item-left
      box-sizing border-box
      height 760px
      position relative
      .content-item
        box-sizing border-box
        height 100%
        display flex
        flex-direction column
        justify-content space-around
        align-content center
        padding 50px 0
        &__head
          font-family Alegreya-Bold
          text-align center
          > h2
            font-size 2.5rem
            color $white
          > h4
            font-size 1rem
            text-transform uppercase
            color $darkBrown
        &__price
          text-align center
          > h3
            font-family Alegreya-Bold
            font-size 1.5rem
            letter-spacing .1rem
            color $lightBrown
            &:first-child
              color $white
          > p
            margin 7px 0 10px
            font-family Proxima_Nova-Regular
            font-size .9rem
            color $lightGray
