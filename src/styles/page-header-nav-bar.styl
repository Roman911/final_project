@import'./variables.styl';

.nav-bar
  display flex
  height 100%
  justify-content space-between
  align-items center
  &__bar
    box-sizing border-box
    width 100%
    background-color alpha($darkGray, .5)
    height 70px
  &__logo
    flex-grow 2
    > a
      font-family Scriptina
      font-size 1.6rem
      letter-spacing .3rem
      color $white
      &:hover
        color $lightBrown
  &__nav
    flex-grow 8
    height 100%
    > ul
      box-sizing border-box
      display flex
      height 100%
      justify-content space-between
      align-items center
      > li
        color $white
        > a
          box-sizing border-box
          font-family Alegreya-Regular
          text-transform uppercase
          font-size .9rem
          letter-spacing .4rem
          color $white
          &:hover
            color $lightBrown
  &__icons
    display flex
    justify-content flex-end
    flex-grow 2
    > a
      margin-left 20px
      color $white
      &:hover
        color $lightBrown
